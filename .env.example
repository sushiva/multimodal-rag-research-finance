# Application Settings
APP_NAME=multimodal-rag-research-finance
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# Security
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
API_KEY_HEADER=X-API-Key
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501

# LLM Providers
# Primary: Google Gemini
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_MAX_TOKENS=2000

# Tier 3: Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_MODEL=claude-3-5-haiku-20241022
ANTHROPIC_MAX_TOKENS=2000

# Tier 4: OpenAI
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=500

# Embeddings
# Text Embeddings: Jina AI
JINA_API_KEY=your_jina_api_key
JINA_MODEL=jina-embeddings-v3
JINA_DIMENSIONS=1024

# Visual Embeddings: Nomic
NOMIC_API_KEY=your_nomic_api_key
NOMIC_MODEL=nomic-embed-vision-v1.5
NOMIC_DIMENSIONS=768

# OpenSearch Configuration
OPENSEARCH_URL=http://localhost:9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin
OPENSEARCH_USE_SSL=False
OPENSEARCH_VERIFY_CERTS=False

# OpenSearch Indices
OPENSEARCH_INDEX_ARXIV=arxiv
OPENSEARCH_INDEX_FINANCIAL=financial
OPENSEARCH_INDEX_ARXIV_VISUAL=arxiv_visual
OPENSEARCH_INDEX_FINANCIAL_VISUAL=financial_visual

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=multimodal_rag
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/multimodal_rag

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# Redis Cache Settings
CACHE_EMBEDDING_TTL=604800
CACHE_RESPONSE_TTL=3600
CACHE_DEFAULT_TTL=300

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# File Upload
MAX_UPLOAD_SIZE_MB=10
ALLOWED_IMAGE_TYPES=image/png,image/jpeg,image/jpg
TEMP_UPLOAD_DIR=/tmp/uploads

# Airflow (Optional - for batch processing)
AIRFLOW_HOME=./airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql://postgres:postgres@localhost:5432/airflow

# Monitoring & Logging
SENTRY_DSN=
STRUCTURED_LOGGING=True
LOG_FORMAT=json

# Production Settings (Railway)
# Uncomment and set these in production
# ENVIRONMENT=production
# DEBUG=False
# API_RELOAD=False
# OPENSEARCH_URL=${{OpenSearch.OPENSEARCH_URL}}
# DATABASE_URL=${{Postgres.DATABASE_URL}}
# REDIS_URL=${{Redis.REDIS_URL}}
